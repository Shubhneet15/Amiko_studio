<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittext"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/emimeIV"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/eposide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/mainTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium"
        android:layout_marginHorizontal="25dp"
        app:layout_constraintStart_toEndOf="@+id/emimeIV"
        app:layout_constraintTop_toTopOf="@+id/emimeIV"
        android:text="#1 - Enter Naruto Uzumaki"/>

    <TextView
        android:id="@+id/japinesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:layout_marginHorizontal="25dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/emimeIV"
        app:layout_constraintTop_toBottomOf="@+id/mainTV"
        android:text="Aired Oct 12 2003 (JST)"/>


